<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.map.CourseMainActivity">

    <ImageView
        android:id="@+id/course_main_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <ImageView
            android:id="@+id/course_main_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/x_white_btn"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/course_main_walk_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/walk_d_white_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/course_main_subDescrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_centerHorizontal="true"
        android:shadowColor="#29000000"
        android:shadowRadius="6"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="사진찍기 좋은 핫스팟"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false" />

    <TextView
        android:id="@+id/course_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#29000000"
        android:shadowRadius="6"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:text="데이트하기 좋은 코스"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:includeFontPadding="false"
        android:layout_below="@+id/course_main_subDescrip"
        android:layout_centerHorizontal="true"
        />

    <View
        android:id="@+id/course_main_view"
        android:layout_below="@+id/course_main_title"
        android:layout_width="1dp"
        android:layout_height="117dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/course_main_pick_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_main_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:shadowColor="#29000000"
        android:shadowRadius="6"
        android:textSize="18sp"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:text="120명이 PICK한 그 곳"
        />

    <ImageView
        android:id="@+id/course_main_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="98dp"
        android:src="@drawable/map_more_down_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#29000000"
        android:shadowRadius="6"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/course_main_more"
        android:layout_marginBottom="15dp"
        android:text="보러가기"
        />


</RelativeLayout>