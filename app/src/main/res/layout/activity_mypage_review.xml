<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.mypage.MypageReviewActivity">


    <RelativeLayout
            android:id="@+id/reviewToolbar"
            android:background="@color/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="209dp"/>

    <ImageView
            android:id="@+id/reviewBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_btn"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="25dp"/>

    <ImageView
            android:id="@+id/reviewIcon"
            android:layout_marginTop="14.7dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23.3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/walk_d_icon"/>

    <TextView
            android:id="@+id/reviewText"
            android:layout_marginTop="29.3dp"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:includeFontPadding="false"
            android:layout_below="@+id/reviewIcon"
            android:layout_marginLeft="37dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#1c3748"
            android:lineSpacingExtra="12sp"
            android:text="나의 리뷰"
    />

    <android.support.v4.widget.NestedScrollView
            android:layout_marginTop="13dp"
            android:layout_below="@+id/reviewText"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <TextView
                    android:layout_marginLeft="37dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#1c3748"
                    android:lineSpacingExtra="6sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:includeFontPadding="false"
                    android:text="내가 쓴 리뷰와 ‘좋아요’를 누른 리뷰입니다!"
            />

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/reviewList"
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>